#!/bin/bash 
if [[ $# == 0 || $1 == "--help" ]]
then
echo "Usage: GenerateAll.sh AtlasConfigFile"
echo "       Runs all the generation scripts for the atlas"
exit 1
fi

echo -n "Generate Adjaciencies..."
@OpenAtlas_BINARY_DIR@/GenerateAdjacencies.sh $1
echo "Done"
echo -n "Generate Statistics..."
@OpenAtlas_BINARY_DIR@/GenerateStatisticsFromLabels.sh $1
echo "Done"
echo -n "Generate STL Models..."
@OpenAtlas_BINARY_DIR@/GenerateModelsFromLabels.sh $1
echo "Done"
echo -n "Generate Cubes..."
@OpenAtlas_BINARY_DIR@/GenerateCubesFromLabels.sh $1
echo "Done"
echo -n "Display all adjacent models..."
@OpenAtlas_BINARY_DIR@/DisplayAllAdjacentModels.sh $1
echo "Done"
echo -n "Generate Mrml Scene..."
@OpenAtlas_BINARY_DIR@/GenerateMrmlScene.sh $1 VTK
@OpenAtlas_BINARY_DIR@/GenerateMrmlScene.sh $1 STL
echo "Done"
