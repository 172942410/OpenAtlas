#!/bin/bash 
if [[ $# < 1 || $1 == "--help" ]]
then
echo "Usage: GenerateCubesFromLabels.sh AtlasConfigFile"
echo "       Generates cube models( .vtk) for each label in the atlas"
exit 1
fi

# Check for existance of the files
if [ ! -e $1 ]; then
  echo "GenerateCubesFromLabels: $1 does not exist"
  exit 1
fi

# Check for a valid Atlas config file
Prog=GetAtlasAttribute
AppDir=""
if [ `uname` == "Darwin" ]; then AppDir=$Prog.app/Contents/MacOS/ ; fi
Atlas=`@OpenAtlas_BINARY_DIR@/$AppDir/$Prog $1 AtlasName`
if [ -z "$Atlas" ]; then
    echo "GenerateCubesFromLabels: $1 is not a valid Atlas config file"
    exit 1
fi

Prog=GenerateCubesFromLabels
AtlasConfig=$1

AppDir=""
if [ `uname` == "Darwin" ]; then AppDir=$Prog.app/Contents/MacOS/ ; fi

@OpenAtlas_BINARY_DIR@/$AppDir/$Prog $AtlasConfig 1 15000
