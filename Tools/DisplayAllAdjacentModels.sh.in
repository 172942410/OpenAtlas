#!/bin/bash 
OpenAtlasHome=@OpenAtlas_SOURCE_DIR@/..
pushd $OpenAtlasHome/Atlases/SPLAtlas/Models

all=`ls -1 VTK| sort | cut -d":" -f2 | cut -d"." -f1,1`
echo $all

AppDir=""
if [ `uname` == "Darwin" ]; then AppDir=DisplayAdjacentModels.app/Contents/MacOS/ ; fi

for i in $all; do
@OpenAtlas_BINARY_DIR@/$AppDir/DisplayAdjacentModels $i $OpenAtlasHome/Atlases/SPLAtlas/Atlas/hncma-atlas-lut.ctbl ./adjacencies.txt 
done
popd
